{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=FilmWebsiteDB;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "WhisperSettings": {
    "ModelPath": "Whisper/ggml-large-v1.bin",
    "ExecutablePath": "Whisper/WhisperDesktop.exe",
    "MaxFileSizeMB": 500,
    "SupportedFormats": [ ".mp4", ".mp3", ".wav", ".m4a", ".avi", ".mov", ".mkv", ".wmv", ".flv", ".aac", ".ogg", ".flac" ]
  },
  "TranslationSettings": {
    "SupportedLanguages": {
      "en": "English",
      "es": "Spanish",
      "fr": "French",
      "de": "German",
      "it": "Italian",
      "pt": "Portuguese",
      "zh": "Chinese",
      "ja": "Japanese",
      "ko": "Korean",
      "vi": "Vietnamese"
    }
  }
}
