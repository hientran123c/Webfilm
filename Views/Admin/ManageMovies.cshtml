@{
    ViewData["Title"] = "Movie Manager - CineHub Admin";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/admin-styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Bangers&family=Creepster&family=Bungee&display=swap" rel="stylesheet">
</head>
<body>
    <div class="comic-elements" id="comicElements"></div>

    <nav class="admin-navbar">
        <div class="nav-container">
            <div class="nav-left">
                <div class="admin-logo">
                    <div class="logo-circle">🛡️</div>
                    <h2>ADMIN HQ</h2>
                </div>
            </div>
            <div class="nav-center">
                <h1>🎬 CINEHUB COMMAND CENTER 🎬</h1>
            </div>
            <div class="nav-right">
                <button class="nav-btn" onclick="toggleNotifications()">🔔</button>
                <button class="nav-btn" onclick="toggleProfile()">👨‍💼</button>
                <a href="@Url.Action("Index", "Home")" class="nav-btn logout-btn">🚪</a>
            </div>
        </div>
    </nav>

    <div class="main-container">
        <aside class="sidebar">
            <div class="sidebar-section">
                <div class="user-info">
                    <div class="user-avatar">🦸</div>
                    <div class="user-details">
                        <h3>ADMIN HERO</h3>
                        <p>Supreme Commander</p>
                    </div>
                </div>
            </div>
            <nav class="sidebar-menu">
                <a href="@Url.Action("Dashboard", "Admin")" class="menu-item" data-section="dashboard">
                    <span class="menu-icon">🏠</span>
                    <span class="menu-text">DASHBOARD</span>
                </a>
                <a href="@Url.Action("ManageMovies", "Admin")" class="menu-item active" data-section="movies">
                    <span class="menu-icon">🎬</span>
                    <span class="menu-text">MOVIE MANAGER</span>
                </a>
                <a href="#" class="menu-item" data-section="series">
                    <span class="menu-icon">📺</span>
                    <span class="menu-text">SERIES CONTROL</span>
                </a>
                <a href="#" class="menu-item" data-section="subtitles">
                    <span class="menu-icon">💬</span>
                    <span class="menu-text">SUBTITLE HQ</span>
                </a>
                <a href="@Url.Action("Translator", "Admin")" class="menu-item translator-link">
                    <span class="menu-icon">🌐</span>
                    <span class="menu-text">AI TRANSLATOR</span>
                </a>
                <a href="#" class="menu-item" data-section="photos">
                    <span class="menu-icon">📸</span>
                    <span class="menu-text">PHOTO VAULT</span>
                </a>
                <a href="#" class="menu-item" data-section="users">
                    <span class="menu-icon">👥</span>
                    <span class="menu-text">USER HEROES</span>
                </a>
                <a href="#" class="menu-item" data-section="comments">
                    <span class="menu-icon">💭</span>
                    <span class="menu-text">HERO COMMENTS</span>
                </a>
                <a href="#" class="menu-item" data-section="reports">
                    <span class="menu-icon">📊</span>
                    <span class="menu-text">BATTLE REPORTS</span>
                </a>
                <a href="#" class="menu-item" data-section="contact">
                    <span class="menu-icon">📞</span>
                    <span class="menu-text">HERO CONTACT</span>
                </a>
            </nav>
        </aside>

        <main class="main-content">
            <section id="movies" class="content-section active">
                <div class="section-header">
                    <h2>🎬 MOVIE MANAGER 🎬</h2>
                    <div class="quick-actions">
                        <a href="@Url.Action("AddMovie", "Admin")" class="action-btn">➕ ADD MOVIE</a>
                    </div>
                </div>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success comic-pop">
                        @TempData["Success"]
                    </div>
                }

                <div class="content-card">
                    <div class="card-header">
                        <h3>🎬 ALL MOVIES</h3>
                    </div>
                    <div class="card-content">
                        <div class="table-container">
                            <div class="table-header">
                                <span>TITLE</span>
                                <span>GENRE</span>
                                <span>RELEASE YEAR</span>
                                <span>ACTIONS</span>
                            </div>
                            @foreach (var movie in Model)
                            {
                                <div class="table-row">
                                    <span>@movie.Title</span>
                                    <span>@movie.Genre</span>
                                    <span>@movie.ReleaseYear</span>
                                    <span class="actions">
                                        <a href="@Url.Action("ViewMovie", "Admin", new { id = movie.Id })" class="mini-btn view-btn">👀 VIEW</a>
                                        <a href="@Url.Action("EditMovie", "Admin", new { id = movie.Id })" class="mini-btn edit">✏️</a>
                                        <form asp-action="DeleteMovie" asp-route-id="@movie.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this movie?');">
                                            <button type="submit" class="mini-btn delete">🗑️</button>
                                        </form>
                                    </span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <script src="~/js/admin-dashboard.js"></script>
    <style>
        /* Modern Red & Black Admin Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary-red: #dc2626;
            --dark-red: #991b1b;
            --light-red: #ef4444;
            --black: #000000;
            --dark-gray: #111111;
            --medium-gray: #1f1f1f;
            --light-gray: #2d2d2d;
            --white: #ffffff;
            --text-light: #e5e5e5;
            --text-gray: #a3a3a3;
            --shadow: 0 4px 20px rgba(220, 38, 38, 0.3);
            --shadow-dark: 0 8px 32px rgba(0, 0, 0, 0.5);
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, var(--black) 0%, var(--dark-gray) 100%);
            color: var(--text-light);
            min-height: 100vh;
            overflow-x: hidden;
        }

        .main-container {
            display: flex;
            min-height: 100vh;
            position: relative;
        }

            .main-container::before {
                content: '';
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: radial-gradient(circle at 20% 80%, rgba(220, 38, 38, 0.1) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(220, 38, 38, 0.1) 0%, transparent 50%);
                pointer-events: none;
                z-index: 0;
            }

        .sidebar {
            width: 280px;
            background: linear-gradient(180deg, var(--medium-gray) 0%, var(--dark-gray) 100%);
            border-right: 2px solid var(--primary-red);
            box-shadow: 4px 0 20px rgba(0, 0, 0, 0.5);
            position: relative;
            z-index: 1;
        }

        .main-content {
            flex: 1;
            padding: 2rem;
            position: relative;
            z-index: 1;
            background: rgba(17, 17, 17, 0.8);
            backdrop-filter: blur(10px);
        }

        .content-section {
            max-width: 900px;
            margin: 0 auto;
        }

        .section-header {
            margin-bottom: 2rem;
            text-align: center;
            position: relative;
        }

            .section-header h2 {
                font-family: 'Bungee', cursive;
                font-size: 2.5rem;
                color: var(--primary-red);
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
                margin-bottom: 0.5rem;
                position: relative;
                display: inline-block;
            }

                .section-header h2::after {
                    content: '';
                    position: absolute;
                    bottom: -10px;
                    left: 50%;
                    transform: translateX(-50%);
                    width: 100px;
                    height: 3px;
                    background: linear-gradient(90deg, transparent, var(--primary-red), transparent);
                }

        .content-card {
            background: linear-gradient(145deg, var(--medium-gray) 0%, var(--light-gray) 100%);
            border-radius: 20px;
            padding: 3rem;
            box-shadow: var(--shadow-dark);
            border: 1px solid rgba(220, 38, 38, 0.3);
            position: relative;
            overflow: hidden;
        }

            .content-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(90deg, var(--primary-red), var(--light-red), var(--primary-red));
            }

        .card-content {
            position: relative;
            z-index: 1;
        }

        .form-group {
            margin-bottom: 2rem;
            position: relative;
        }

            .form-group label {
                display: block;
                margin-bottom: 0.8rem;
                font-weight: 600;
                color: var(--text-light);
                font-size: 1.1rem;
                text-transform: uppercase;
                letter-spacing: 1px;
                position: relative;
            }

                .form-group label::after {
                    content: '';
                    position: absolute;
                    bottom: -4px;
                    left: 0;
                    width: 30px;
                    height: 2px;
                    background: var(--primary-red);
                }

        .form-control,
        .form-control-file {
            width: 100%;
            padding: 1rem 1.5rem;
            border: 2px solid var(--light-gray);
            border-radius: 12px;
            background: var(--dark-gray);
            color: var(--text-light);
            font-size: 1rem;
            transition: all 0.3s ease;
            outline: none;
        }

            .form-control:focus,
            .form-control-file:focus {
                border-color: var(--primary-red);
                box-shadow: 0 0 0 3px rgba(220, 38, 38, 0.2);
                transform: translateY(-2px);
            }

            .form-control::placeholder {
                color: var(--text-gray);
            }

        textarea.form-control {
            resize: vertical;
            min-height: 120px;
        }

        .form-control-file {
            padding: 0.8rem 1.5rem;
            cursor: pointer;
            border-style: dashed;
            transition: all 0.3s ease;
        }

            .form-control-file:hover {
                border-color: var(--light-red);
                background: rgba(220, 38, 38, 0.1);
            }

        .action-btn {
            background: linear-gradient(135deg, var(--primary-red) 0%, var(--dark-red) 100%);
            color: var(--white);
            border: none;
            padding: 1.2rem 3rem;
            border-radius: 50px;
            font-size: 1.2rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 2px;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            box-shadow: var(--shadow);
            display: block;
            margin: 2rem auto 0;
            min-width: 200px;
        }

            .action-btn::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
                transition: left 0.5s ease;
            }

            .action-btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(220, 38, 38, 0.4);
                background: linear-gradient(135deg, var(--light-red) 0%, var(--primary-red) 100%);
            }

                .action-btn:hover::before {
                    left: 100%;
                }

            .action-btn:active {
                transform: translateY(-1px);
            }

        .text-danger {
            color: #ff6b6b;
            font-size: 0.9rem;
            margin-top: 0.5rem;
            display: block;
            font-weight: 500;
        }

        /* Edit Movie Specific Styles */
        .form-group .file-info {
            background: rgba(220, 38, 38, 0.1);
            border: 1px solid rgba(220, 38, 38, 0.3);
            border-radius: 8px;
            padding: 0.8rem 1rem;
            margin-top: 0.5rem;
            font-size: 0.9rem;
            color: var(--text-gray);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .form-group .file-info::before {
                content: "ℹ️";
                font-size: 1rem;
            }

        /* Enhanced File Upload Styling */
        .form-control-file {
            position: relative;
            background: linear-gradient(145deg, var(--dark-gray), var(--medium-gray));
            border: 2px dashed var(--light-gray);
            transition: all 0.4s ease;
        }

            .form-control-file:hover {
                border-color: var(--primary-red);
                background: linear-gradient(145deg, rgba(220, 38, 38, 0.1), rgba(220, 38, 38, 0.05));
                transform: translateY(-2px);
            }

            .form-control-file::before {
                content: "📁 Choose File";
                position: absolute;
                top: 50%;
                left: 1.5rem;
                transform: translateY(-50%);
                color: var(--text-gray);
                pointer-events: none;
                z-index: 1;
            }

            .form-control-file::-webkit-file-upload-button {
                background: linear-gradient(135deg, var(--primary-red), var(--dark-red));
                color: white;
                border: none;
                padding: 0.5rem 1rem;
                border-radius: 6px;
                margin-right: 1rem;
                cursor: pointer;
                font-weight: 600;
                transition: all 0.3s ease;
            }

                .form-control-file::-webkit-file-upload-button:hover {
                    background: linear-gradient(135deg, var(--light-red), var(--primary-red));
                    transform: scale(1.05);
                }

        /* Form Section Dividers */
        .form-section {
            border-left: 4px solid var(--primary-red);
            padding-left: 1.5rem;
            margin-bottom: 2.5rem;
            position: relative;
        }

            .form-section::before {
                content: '';
                position: absolute;
                left: -2px;
                top: 0;
                width: 4px;
                height: 100%;
                background: linear-gradient(180deg, var(--primary-red), transparent);
            }

        .form-section-title {
            color: var(--primary-red);
            font-size: 1.2rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* Success/Update Messages */
        .alert {
            padding: 1rem 1.5rem;
            border-radius: 12px;
            margin-bottom: 2rem;
            border: 1px solid;
            display: flex;
            align-items: center;
            gap: 1rem;
            font-weight: 500;
        }

        .alert-success {
            background: rgba(34, 197, 94, 0.1);
            border-color: rgba(34, 197, 94, 0.3);
            color: #4ade80;
        }

            .alert-success::before {
                content: "✅";
                font-size: 1.2rem;
            }

        .alert-danger {
            background: rgba(239, 68, 68, 0.1);
            border-color: rgba(239, 68, 68, 0.3);
            color: #f87171;
        }

            .alert-danger::before {
                content: "❌";
                font-size: 1.2rem;
            }

        /* Action Button Variations */
        .action-btn.update-btn {
            background: linear-gradient(135deg, var(--primary-red) 0%, #dc2626 100%);
        }

            .action-btn.update-btn:hover {
                background: linear-gradient(135deg, var(--light-red) 0%, var(--primary-red) 100%);
            }

        .action-btn.secondary-btn {
            background: linear-gradient(135deg, var(--light-gray) 0%, var(--medium-gray) 100%);
            color: var(--text-light);
            border: 2px solid var(--primary-red);
        }

            .action-btn.secondary-btn:hover {
                background: linear-gradient(135deg, var(--primary-red) 0%, var(--dark-red) 100%);
                color: var(--white);
            }

        /* Form Actions Container */
        .form-actions {
            display: flex;
            gap: 1.5rem;
            justify-content: center;
            margin-top: 3rem;
            padding-top: 2rem;
            border-top: 1px solid rgba(220, 38, 38, 0.2);
        }

        /* Enhanced Input Focus States */
        .form-control:focus,
        .form-control-file:focus {
            border-color: var(--primary-red);
            box-shadow: 0 0 0 3px rgba(220, 38, 38, 0.2), 0 4px 12px rgba(220, 38, 38, 0.15);
            transform: translateY(-2px);
        }

        /* Loading State for Buttons */
        .action-btn.loading {
            pointer-events: none;
            opacity: 0.7;
            position: relative;
        }

            .action-btn.loading::after {
                content: '';
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                width: 20px;
                height: 20px;
                border: 2px solid transparent;
                border-top: 2px solid white;
                border-radius: 50%;
                animation: spin 1s linear infinite;
            }

        @@-webkit-keyframes spin {
            0% {
                -webkit-transform: translate(-50%, -50%) rotate(0deg);
            }

            100% {
                -webkit-transform: translate(-50%, -50%) rotate(360deg);
            }
        }

        @@keyframes spin {
            0% {
                transform: translate(-50%, -50%) rotate(0deg);
            }

            100% {
                transform: translate(-50%, -50%) rotate(360deg);
            }
        }

        /* Preview Image Styles */
        .image-preview {
            max-width: 200px;
            max-height: 150px;
            border-radius: 8px;
            border: 2px solid var(--primary-red);
            margin-top: 1rem;
            object-fit: cover;
        }

        /* Enhanced Typography */
        .section-header h2.edit-title {
            color: #fbbf24;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
        }

            .section-header h2.edit-title::after {
                background: linear-gradient(90deg, transparent, #fbbf24, transparent);
            }

        /* Admin Navigation Bar */
        .admin-navbar {
            background: linear-gradient(90deg, var(--black) 0%, var(--dark-gray) 50%, var(--black) 100%);
            border-bottom: 3px solid var(--primary-red);
            padding: 1rem 2rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .nav-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1400px;
            margin: 0 auto;
        }

        .nav-left {
            display: flex;
            align-items: center;
        }

        .admin-logo {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .logo-circle {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, var(--primary-red), var(--dark-red));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            border: 2px solid var(--white);
            box-shadow: 0 4px 15px rgba(220, 38, 38, 0.4);
        }

        .admin-logo h2 {
            font-family: 'Bungee', cursive;
            color: var(--primary-red);
            margin: 0;
            font-size: 1.5rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
        }

        .nav-center h1 {
            font-family: 'Bangers', cursive;
            color: var(--white);
            font-size: 2.5rem;
            margin: 0;
            text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.8);
            letter-spacing: 2px;
        }

        .nav-right {
            display: flex;
            gap: 1rem;
            align-items: center;
        }

        .nav-btn {
            background: linear-gradient(135deg, var(--medium-gray), var(--light-gray));
            border: 2px solid var(--primary-red);
            color: var(--white);
            padding: 0.8rem;
            border-radius: 50%;
            font-size: 1.2rem;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 45px;
            height: 45px;
        }

            .nav-btn:hover {
                background: linear-gradient(135deg, var(--primary-red), var(--dark-red));
                transform: scale(1.1);
                box-shadow: 0 4px 15px rgba(220, 38, 38, 0.4);
            }

        .logout-btn {
            background: linear-gradient(135deg, var(--dark-red), #7f1d1d);
        }

        /* Sidebar Styles */
        .sidebar {
            width: 280px;
            background: linear-gradient(180deg, var(--medium-gray) 0%, var(--dark-gray) 100%);
            border-right: 3px solid var(--primary-red);
            box-shadow: 4px 0 20px rgba(0, 0, 0, 0.5);
            height: calc(100vh - 80px);
            overflow-y: auto;
        }

        .sidebar-section {
            padding: 2rem 1.5rem;
            border-bottom: 1px solid rgba(220, 38, 38, 0.3);
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .user-avatar {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, var(--primary-red), var(--dark-red));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            border: 3px solid var(--white);
            box-shadow: 0 4px 15px rgba(220, 38, 38, 0.4);
        }

        .user-details h3 {
            color: var(--white);
            margin: 0 0 0.5rem 0;
            font-family: 'Bungee', cursive;
            font-size: 1.1rem;
        }

        .user-details p {
            color: var(--text-gray);
            margin: 0;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .sidebar-menu {
            padding: 1rem 0;
        }

        .menu-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem 1.5rem;
            color: var(--text-light);
            text-decoration: none;
            transition: all 0.3s ease;
            border-left: 4px solid transparent;
            position: relative;
        }

            .menu-item:hover {
                background: rgba(220, 38, 38, 0.1);
                border-left-color: var(--primary-red);
                transform: translateX(5px);
            }

            .menu-item.active {
                background: linear-gradient(90deg, rgba(220, 38, 38, 0.2), transparent);
                border-left-color: var(--primary-red);
                color: var(--white);
            }

                .menu-item.active .menu-icon {
                    color: var(--primary-red);
                    transform: scale(1.2);
                }

        .menu-icon {
            font-size: 1.2rem;
            width: 24px;
            text-align: center;
            transition: all 0.3s ease;
        }

        .menu-text {
            font-weight: 600;
            font-size: 0.9rem;
            letter-spacing: 1px;
        }

        /* Main Content Area */
        .main-content {
            flex: 1;
            padding: 2rem;
            background: rgba(17, 17, 17, 0.8);
            backdrop-filter: blur(10px);
            min-height: calc(100vh - 80px);
        }

        /* Section Header */
        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid rgba(220, 38, 38, 0.3);
        }

        .quick-actions {
            display: flex;
            gap: 1rem;
        }

        /* Content Cards */
        .content-card {
            background: linear-gradient(145deg, var(--medium-gray) 0%, var(--light-gray) 100%);
            border-radius: 20px;
            box-shadow: var(--shadow-dark);
            border: 1px solid rgba(220, 38, 38, 0.3);
            overflow: hidden;
            position: relative;
        }

            .content-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(90deg, var(--primary-red), var(--light-red), var(--primary-red));
            }

        .card-header {
            padding: 1.5rem 2rem;
            border-bottom: 1px solid rgba(220, 38, 38, 0.3);
            background: rgba(0, 0, 0, 0.3);
        }

            .card-header h3 {
                color: var(--white);
                margin: 0;
                font-family: 'Bungee', cursive;
                font-size: 1.3rem;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
            }

        .card-content {
            padding: 0;
        }

        /* Table Styles */
        .table-container {
            overflow-x: auto;
        }

        .table-header {
            display: grid;
            grid-template-columns: 2fr 1fr 1fr 1.5fr;
            gap: 1rem;
            padding: 1.5rem 2rem;
            background: rgba(220, 38, 38, 0.1);
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--white);
            border-bottom: 2px solid var(--primary-red);
        }

        .table-row {
            display: grid;
            grid-template-columns: 2fr 1fr 1fr 1.5fr;
            gap: 1rem;
            padding: 1.5rem 2rem;
            border-bottom: 1px solid rgba(220, 38, 38, 0.2);
            transition: all 0.3s ease;
            align-items: center;
        }

            .table-row:hover {
                background: rgba(220, 38, 38, 0.05);
                transform: translateX(5px);
            }

            .table-row:last-child {
                border-bottom: none;
            }

        .actions {
            display: flex;
            gap: 0.5rem;
            align-items: center;
        }

        /* Mini Buttons */
        .mini-btn {
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 6px;
            font-size: 0.8rem;
            font-weight: 600;
            text-decoration: none;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

            .mini-btn.view-btn {
                background: linear-gradient(135deg, #3b82f6, #1d4ed8);
                color: white;
            }

                .mini-btn.view-btn:hover {
                    background: linear-gradient(135deg, #60a5fa, #3b82f6);
                    transform: scale(1.05);
                }

            .mini-btn.edit {
                background: linear-gradient(135deg, #f59e0b, #d97706);
                color: white;
            }

                .mini-btn.edit:hover {
                    background: linear-gradient(135deg, #fbbf24, #f59e0b);
                    transform: scale(1.05);
                }

            .mini-btn.delete {
                background: linear-gradient(135deg, var(--primary-red), var(--dark-red));
                color: white;
            }

                .mini-btn.delete:hover {
                    background: linear-gradient(135deg, var(--light-red), var(--primary-red));
                    transform: scale(1.05);
                }

        /* Alert Messages */
        .alert {
            padding: 1rem 1.5rem;
            border-radius: 12px;
            margin-bottom: 2rem;
            border: 1px solid;
            display: flex;
            align-items: center;
            gap: 1rem;
            font-weight: 500;
        }

        .alert-success {
            background: rgba(34, 197, 94, 0.1);
            border-color: rgba(34, 197, 94, 0.3);
            color: #4ade80;
        }

            .alert-success::before {
                content: "✅";
                font-size: 1.2rem;
            }

        .comic-pop {
            animation: comicPop 0.5s ease-out;
        }

        @@keyframes comicPop {
            0% {
                transform: scale(0.8);
                opacity: 0;
            }

            50% {
                transform: scale(1.1);
            }

            100% {
                transform: scale(1);
                opacity: 1;
            }
        }

        /* Responsive Design */
        @@media screen and (max-width: 1200px) {
            .nav-center h1 {
                font-size: 2rem;
            }

            .sidebar {
                width: 250px;
            }
        }

        @@media screen and (max-width: 768px) {
            .admin-navbar {
                padding: 1rem;
            }

            .nav-container {
                flex-direction: column;
                gap: 1rem;
            }

            .nav-center h1 {
                font-size: 1.5rem;
            }

            .main-container {
                flex-direction: column;
            }

            .sidebar {
                width: 100%;
                height: auto;
                order: 2;
            }

            .main-content {
                order: 1;
                padding: 1rem;
            }

            .table-header,
            .table-row {
                grid-template-columns: 1fr;
                gap: 0.5rem;
            }

                .table-header span,
                .table-row span {
                    padding: 0.5rem 0;
                }

            .actions {
                justify-content: flex-start;
                flex-wrap: wrap;
            }
        }

        /* Comic Elements Animation */
        .comic-elements {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 0;
        }

        /* Enhanced Visual Effects */
        .content-card,
        .admin-navbar {
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
        }

        /* Custom Scrollbar for Sidebar */
        .sidebar::-webkit-scrollbar {
            width: 6px;
        }

        .sidebar::-webkit-scrollbar-track {
            background: var(--dark-gray);
        }

        .sidebar::-webkit-scrollbar-thumb {
            background: var(--primary-red);
            border-radius: 3px;
        }

            .sidebar::-webkit-scrollbar-thumb:hover {
                background: var(--light-red);
            }

        /* Responsive Design */
        @@media screen and (max-width: 768px) {
            .main-container {
                flex-direction: column;
            }

            .sidebar {
                width: 100%;
                order: 2;
            }

            .main-content {
                padding: 1rem;
                order: 1;
            }

            .content-card {
                padding: 2rem 1.5rem;
            }

            .section-header h2 {
                font-size: 2rem;
            }
        }

        /* Loading Animation */
        @@-webkit-keyframes pulse {
            0% {
                -webkit-transform: scale(1);
                transform: scale(1);
            }

            50% {
                -webkit-transform: scale(1.05);
                transform: scale(1.05);
            }

            100% {
                -webkit-transform: scale(1);
                transform: scale(1);
            }
        }

        @@keyframes pulse {
            0% {
                -webkit-transform: scale(1);
                transform: scale(1);
            }

            50% {
                -webkit-transform: scale(1.05);
                transform: scale(1.05);
            }

            100% {
                -webkit-transform: scale(1);
                transform: scale(1);
            }
        }

        .form-group:hover .form-control {
            -webkit-animation: pulse 0.6s ease-in-out;
            animation: pulse 0.6s ease-in-out;
        }

        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: var(--dark-gray);
        }

        ::-webkit-scrollbar-thumb {
            background: var(--primary-red);
            border-radius: 4px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: var(--light-red);
            }

        /* Enhanced Visual Effects */
        .content-card {
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
        }

        .form-control,
        .form-control-file {
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
        }
    </style>
</body>
</html>