@model Film_website.Models.Movie
@{
    ViewData["Title"] = @Model.Title + " - CineHub Admin";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/admin-styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Bangers&family=Creepster&family=Bungee&display=swap" rel="stylesheet">
</head>
<body>
    <div class="comic-elements" id="comicElements"></div>

    <nav class="admin-navbar">
        <div class="nav-container">
            <div class="nav-left">
                <div class="admin-logo">
                    <div class="logo-circle">🛡️</div>
                    <h2>ADMIN HQ</h2>
                </div>
            </div>
            <div class="nav-center">
                <h1>🎬 CINEHUB COMMAND CENTER 🎬</h1>
            </div>
            <div class="nav-right">
                <button class="nav-btn" onclick="toggleNotifications()">🔔</button>
                <button class="nav-btn" onclick="toggleProfile()">👨‍💼</button>
                <a href="@Url.Action("Index", "Home")" class="nav-btn logout-btn">🚪</a>
            </div>
        </div>
    </nav>

    <div class="main-container">
        <aside class="sidebar">
            <div class="sidebar-section">
                <div class="user-info">
                    <div class="user-avatar">🦸</div>
                    <div class="user-details">
                        <h3>ADMIN HERO</h3>
                        <p>Supreme Commander</p>
                    </div>
                </div>
            </div>
            <nav class="sidebar-menu">
                <a href="@Url.Action("Dashboard", "Admin")" class="menu-item" data-section="dashboard">
                    <span class="menu-icon">🏠</span>
                    <span class="menu-text">DASHBOARD</span>
                </a>
                <a href="@Url.Action("ManageMovies", "Admin")" class="menu-item active" data-section="movies">
                    <span class="menu-icon">🎬</span>
                    <span class="menu-text">MOVIE MANAGER</span>
                </a>
                <a href="#" class="menu-item" data-section="series">
                    <span class="menu-icon">📺</span>
                    <span class="menu-text">SERIES CONTROL</span>
                </a>
                <a href="#" class="menu-item" data-section="subtitles">
                    <span class="menu-icon">💬</span>
                    <span class="menu-text">SUBTITLE HQ</span>
                </a>
                <a href="@Url.Action("Translator", "Admin")" class="menu-item translator-link">
                    <span class="menu-icon">🌐</span>
                    <span class="menu-text">AI TRANSLATOR</span>
                </a>
                <a href="#" class="menu-item" data-section="photos">
                    <span class="menu-icon">📸</span>
                    <span class="menu-text">PHOTO VAULT</span>
                </a>
                <a href="#" class="menu-item" data-section="users">
                    <span class="menu-icon">👥</span>
                    <span class="menu-text">USER HEROES</span>
                </a>
                <a href="#" class="menu-item" data-section="comments">
                    <span class="menu-icon">💭</span>
                    <span class="menu-text">HERO COMMENTS</span>
                </a>
                <a href="#" class="menu-item" data-section="reports">
                    <span class="menu-icon">📊</span>
                    <span class="menu-text">BATTLE REPORTS</span>
                </a>
                <a href="#" class="menu-item" data-section="contact">
                    <span class="menu-icon">📞</span>
                    <span class="menu-text">HERO CONTACT</span>
                </a>
            </nav>
        </aside>

        <main class="main-content">
            <section class="content-section active">
                <div class="section-header">
                    <h2>🎬 @Model.Title</h2>
                </div>

                <div class="content-card">
                    <div class="card-content">
                        <div class="movie-details">
                            <img src="@Model.ThumbnailPath" alt="@Model.Title" class="movie-thumbnail" />
                            <div class="movie-info">
                                <h3>@Model.Title</h3>
                                <p><strong>Genre:</strong> @Model.Genre</p>
                                <p><strong>Release Year:</strong> @Model.ReleaseYear</p>
                                <p><strong>Description:</strong> @Model.Description</p>
                            </div>
                        </div>
                        <div class="movie-player">
                            <video controls autoplay>
                                <source src="@Model.FilePath" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        </div>
                        <div class="movie-actions">
                            <a href="@Url.Action("EditMovie", "Admin", new { id = Model.Id })" class="action-btn">✏️ EDIT</a>
                            <form asp-action="DeleteMovie" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this movie?');">
                                <button type="submit" class="action-btn delete-btn">🗑️ DELETE</button>
                            </form>
                            <a href="@Url.Action("ManageMovies", "Admin")" class="action-btn">⬅ BACK</a>
                        </div>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <script src="~/js/admin-dashboard.js"></script>
    <style>
        .movie-player video {
            width: 100%;
            max-height: 500px;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }
    </style>
    <style>
        /* CineHub Admin - Modern Red Black Theme */
        :root {
            --primary-red: #ff1744;
            --dark-red: #d50000;
            --light-red: #ff5983;
            --primary-black: #0a0a0a;
            --dark-black: #000000;
            --light-black: #1a1a1a;
            --gray-dark: #2d2d2d;
            --gray-medium: #424242;
            --gray-light: #616161;
            --white: #ffffff;
            --white-transparent: rgba(255, 255, 255, 0.9);
            --red-transparent: rgba(255, 23, 68, 0.1);
            --shadow-red: rgba(255, 23, 68, 0.3);
            --shadow-black: rgba(0, 0, 0, 0.5);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, var(--primary-black) 0%, var(--dark-black) 50%, var(--light-black) 100%);
            color: var(--white);
            overflow-x: hidden;
            min-height: 100vh;
        }

        /* Comic Elements Background */
        .comic-elements {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: -1;
            background: radial-gradient(circle at 20% 20%, var(--red-transparent) 0%, transparent 50%), radial-gradient(circle at 80% 80%, var(--red-transparent) 0%, transparent 50%), radial-gradient(circle at 40% 60%, var(--red-transparent) 0%, transparent 30%);
        }

        /* Navigation */
        .admin-navbar {
            background: linear-gradient(90deg, var(--primary-black) 0%, var(--dark-red) 100%);
            padding: 1rem 0;
            box-shadow: 0 4px 20px var(--shadow-black);
            position: sticky;
            top: 0;
            z-index: 1000;
            border-bottom: 2px solid var(--primary-red);
        }

        .nav-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 2rem;
        }

        .nav-left, .nav-right {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .admin-logo {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .logo-circle {
            width: 50px;
            height: 50px;
            background: linear-gradient(45deg, var(--primary-red), var(--light-red));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            box-shadow: 0 4px 15px var(--shadow-red);
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }

            100% {
                transform: scale(1);
            }
        }

        .admin-logo h2 {
            color: var(--white);
            font-family: 'Bangers', cursive;
            font-size: 1.8rem;
            text-shadow: 2px 2px 4px var(--shadow-black);
        }

        .nav-center h1 {
            color: var(--white);
            font-family: 'Bungee', cursive;
            font-size: 2rem;
            text-shadow: 2px 2px 4px var(--shadow-black);
            background: linear-gradient(45deg, var(--white), var(--light-red));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .nav-btn {
            background: linear-gradient(45deg, var(--gray-dark), var(--gray-medium));
            border: 2px solid var(--primary-red);
            color: var(--white);
            padding: 0.8rem 1rem;
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 1.2rem;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

            .nav-btn:hover {
                background: linear-gradient(45deg, var(--primary-red), var(--dark-red));
                transform: translateY(-2px);
                box-shadow: 0 6px 20px var(--shadow-red);
            }

        .logout-btn:hover {
            background: linear-gradient(45deg, var(--dark-red), var(--primary-red));
        }

        /* Main Container */
        .main-container {
            display: flex;
            min-height: calc(100vh - 100px);
            gap: 2rem;
            padding: 2rem;
            max-width: 1400px;
            margin: 0 auto;
        }

        /* Sidebar */
        .sidebar {
            width: 280px;
            background: linear-gradient(180deg, var(--light-black) 0%, var(--primary-black) 100%);
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 8px 30px var(--shadow-black);
            border: 1px solid var(--gray-dark);
            position: sticky;
            top: 120px;
            height: fit-content;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 2rem;
            padding: 1.5rem;
            background: linear-gradient(45deg, var(--gray-dark), var(--gray-medium));
            border-radius: 15px;
            border: 1px solid var(--primary-red);
        }

        .user-avatar {
            width: 60px;
            height: 60px;
            background: linear-gradient(45deg, var(--primary-red), var(--light-red));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            box-shadow: 0 4px 15px var(--shadow-red);
        }

        .user-details h3 {
            color: var(--white);
            font-family: 'Bangers', cursive;
            font-size: 1.3rem;
            margin-bottom: 0.2rem;
        }

        .user-details p {
            color: var(--light-red);
            font-size: 0.9rem;
            font-weight: 500;
        }

        /* Sidebar Menu */
        .sidebar-menu {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .menu-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem 1.5rem;
            background: linear-gradient(90deg, transparent, var(--red-transparent));
            border: 1px solid transparent;
            border-radius: 12px;
            color: var(--white);
            text-decoration: none;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .menu-item::before {
                content: '';
                position: absolute;
                left: 0;
                top: 0;
                height: 100%;
                width: 0;
                background: linear-gradient(90deg, var(--primary-red), var(--dark-red));
                transition: width 0.3s ease;
                z-index: -1;
            }

            .menu-item:hover::before,
            .menu-item.active::before {
                width: 100%;
            }

            .menu-item:hover,
            .menu-item.active {
                border-color: var(--primary-red);
                transform: translateX(5px);
                box-shadow: 0 4px 15px var(--shadow-red);
            }

        .menu-icon {
            font-size: 1.5rem;
            width: 30px;
            text-align: center;
        }

        .menu-text {
            font-weight: 600;
            font-size: 0.9rem;
            letter-spacing: 0.5px;
        }

        /* Main Content */
        .main-content {
            flex: 1;
            background: linear-gradient(135deg, var(--light-black) 0%, var(--primary-black) 100%);
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 8px 30px var(--shadow-black);
            border: 1px solid var(--gray-dark);
        }

        .section-header {
            margin-bottom: 2rem;
            text-align: center;
        }

            .section-header h2 {
                font-family: 'Bungee', cursive;
                font-size: 2.5rem;
                color: var(--white);
                text-shadow: 2px 2px 4px var(--shadow-black);
                background: linear-gradient(45deg, var(--white), var(--light-red));
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
            }

        /* Content Card */
        .content-card {
            background: linear-gradient(135deg, var(--gray-dark) 0%, var(--light-black) 100%);
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 8px 30px var(--shadow-black);
            border: 2px solid var(--primary-red);
            position: relative;
            overflow: hidden;
        }

            .content-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(90deg, var(--primary-red), var(--light-red), var(--primary-red));
                animation: shimmer 3s infinite;
            }

        @@keyframes shimmer {
            0% {
                transform: translateX(-100%);
            }

            100% {
                transform: translateX(100%);
            }
        }

        /* Movie Details */
        .movie-details {
            display: flex;
            gap: 2rem;
            margin-bottom: 2rem;
            align-items: flex-start;
        }

        .movie-thumbnail {
            width: 200px;
            height: 300px;
            object-fit: cover;
            border-radius: 15px;
            box-shadow: 0 8px 25px var(--shadow-black);
            border: 2px solid var(--primary-red);
            transition: transform 0.3s ease;
        }

            .movie-thumbnail:hover {
                transform: scale(1.05);
                box-shadow: 0 12px 35px var(--shadow-red);
            }

        .movie-info {
            flex: 1;
        }

            .movie-info h3 {
                font-family: 'Bangers', cursive;
                font-size: 2rem;
                color: var(--light-red);
                margin-bottom: 1rem;
                text-shadow: 2px 2px 4px var(--shadow-black);
            }

            .movie-info p {
                color: var(--white);
                font-size: 1.1rem;
                margin-bottom: 0.8rem;
                line-height: 1.6;
            }

            .movie-info strong {
                color: var(--primary-red);
                font-weight: 700;
            }

        /* Movie Player */
        .movie-player {
            margin-bottom: 2rem;
        }

            .movie-player video {
                width: 100%;
                max-height: 500px;
                border-radius: 15px;
                box-shadow: 0 8px 30px var(--shadow-black);
                border: 2px solid var(--primary-red);
                transition: all 0.3s ease;
            }

                .movie-player video:hover {
                    box-shadow: 0 12px 40px var(--shadow-red);
                    transform: translateY(-2px);
                }

        /* Movie Actions */
        .movie-actions {
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
        }

        .action-btn {
            background: linear-gradient(45deg, var(--gray-dark), var(--gray-medium));
            border: 2px solid var(--primary-red);
            color: var(--white);
            padding: 1rem 2rem;
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 1.1rem;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            position: relative;
            overflow: hidden;
        }

            .action-btn::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
                transition: left 0.5s ease;
            }

            .action-btn:hover::before {
                left: 100%;
            }

            .action-btn:hover {
                background: linear-gradient(45deg, var(--primary-red), var(--dark-red));
                transform: translateY(-3px);
                box-shadow: 0 8px 25px var(--shadow-red);
            }

        .delete-btn {
            background: linear-gradient(45deg, var(--dark-red), #b71c1c);
        }

            .delete-btn:hover {
                background: linear-gradient(45deg, #b71c1c, var(--dark-red));
                box-shadow: 0 8px 25px rgba(183, 28, 28, 0.5);
            }

        /* Responsive Design */
        @@media (max-width: 1200px) {
            .main-container {
                flex-direction: column;
                gap: 1rem;
            }

            .sidebar {
                width: 100%;
                position: static;
            }

            .nav-center h1 {
                font-size: 1.5rem;
            }
        }

        @@media (max-width: 768px) {
            .nav-container {
                flex-direction: column;
                gap: 1rem;
            }

            .movie-details {
                flex-direction: column;
                text-align: center;
            }

            .movie-thumbnail {
                align-self: center;
            }

            .movie-actions {
                flex-direction: column;
                align-items: center;
            }

            .action-btn {
                width: 100%;
                max-width: 300px;
            }
        }

        @@media (max-width: 480px) {
            .main-container {
                padding: 1rem;
            }

            .sidebar {
                padding: 1rem;
            }

            .main-content {
                padding: 1rem;
            }

            .content-card {
                padding: 1rem;
            }

            .section-header h2 {
                font-size: 1.8rem;
            }
        }

        /* Loading Animation */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .content-card,
        .sidebar,
        .main-content {
            animation: fadeInUp 0.6s ease-out;
        }

        /* Scrollbar Styling */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: var(--primary-black);
        }

        ::-webkit-scrollbar-thumb {
            background: linear-gradient(180deg, var(--primary-red), var(--dark-red));
            border-radius: 10px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: linear-gradient(180deg, var(--light-red), var(--primary-red));
            }
    </style>
</body>
</html>